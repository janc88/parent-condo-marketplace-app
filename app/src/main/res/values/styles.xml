<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">@dimen/bottom_navigation_text_size</item>
        <item name="android:maxWidth">@dimen/bottom_navigation_icon_size</item>
        <item name="android:maxHeight">@dimen/bottom_navigation_icon_size</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="NumberPickerText">
        <item name="android:textSize">22dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.MaterialComponents.Light.BottomSheetDialog">

        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle"
        parent="Widget.Design.BottomSheet.Modal">

        <item name="android:background">@drawable/rounded_top_card</item>
    </style>
</resources>