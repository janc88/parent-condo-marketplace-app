        <shape>
            <solid android:color="@android:color/transparent" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:color="#000"
                android:width="2dp"
                android:dashWidth="8dp"
